{
  "name": "expresstart",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:elrumordelaluz/express-react.git",
  "author": "Lionel T <elrumordelaluz@hotmail.com> (https://elrumordelaluz.com/)",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "2.8.5",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "helmet": "^3.21.3",
    "morgan": "1.9.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.6",
    "boxen": "^4.2.0",
    "dotenv": "^8.2.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "scripts": {
    "start:client": "cd client && FORCE_COLOR=true yarn start | cat",
    "start:server": "nodemon --config nodemon.json src/index.js",
    "start": "run-p start:*",
    "prebuild": "rimraf dist",
    "build:server": "babel src -d dist --copy-files",
    "build:client": "cd client && yarn build",
    "build": "run-s build:*",
    "serve": "NODE_ENV=production node dist/index.js"
  }
}
